<!DOCTYPE html>
<html lang="en">
<%- include('head'); -%>
<body class="d-flex flex-column min-vh-100">
<%- include('header_admin'); -%>
<%- include('modal'); -%>
<div class="container col-sm-12 col-md-10 col-lg-6 col-xl-4 mx-auto">
    <h1 class="mb-3 text-center fs-8 fw-bold">Delete a partner </h1>
    <form method="post" class="needs-validation" novalidate="">
        <hr class="my-4">

        <div class="row g-3 px-4 py-5 my-5">
            <div class="col-12">
                <select name="partners" id="partners" class="form-select">
                    <option value="">Choose...</option>
                    <% for (const hospital of hospitals) { %>
                        <option value="<%= hospital.hospital_id %>"><%= hospital.city %>, <%= hospital.name %></option>
                    <% } %>
                </select>
            </div>

            <div class="col-12">
                <button name="delete" class="w-100 btn btn-danger btn-lg" type="submit">Delete</button>
            </div>

        </div>
    </form>
</div>
<%- include('footer_admin'); -%>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/script/js/form_validation.js"></script>
</body>
</html>